# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/skillsync
# For production, use MongoDB Atlas or another cloud database
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/skillsync

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend URL (for webhooks)
BACKEND_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# n8n Integration
# For local n8n: http://localhost:5678/webhook/roadmap-generator
# For n8n.cloud: https://api.n8n.cloud/webhook/roadmap-generator
N8N_ROADMAP_WEBHOOK_URL=https://api.n8n.cloud/webhook/roadmap-generator
N8N_CONTENT_UPDATE_WEBHOOK_URL=https://your-n8n-instance.com/webhook/content-update
N8N_WEBHOOK_SECRET=my-secret-key

# AI Configuration (OpenAI API Key - add this to n8n credentials, not here)
# The API key should be added in n8n under Credentials > OpenAI API
# Example: sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
